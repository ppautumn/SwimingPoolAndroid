<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_layout"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <Button
                android:id="@+id/MenueLkBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Личный кабинет"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                android:visibility="gone"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/MenueTtBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Расписание"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/MenueTrainBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Тренировки"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                android:visibility="gone"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/MenuePriceBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Цены"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/MenuSeansBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Мои сеансы"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/MenuAbonBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Мои абонементы"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/MenueKontBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:text="Контакты"
                android:textColor="@color/TBgray"
                android:textSize="18sp"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>