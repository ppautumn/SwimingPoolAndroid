<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="357dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RegTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:gravity="center"
                android:text="Регистрация"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/RegLoginET"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:hint="Телефон"
                android:inputType="textPassword|phone" />

            <TextView
                android:id="@+id/RegTV2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates"
                android:text="На номер телефона придет подтверждение" />

            <EditText
                android:id="@+id/RegPassET1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:hint="Пароль"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/RegPassET2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:hint="Подтверждение пароля"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/RegCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="center"
                    android:text="Я ознакомлен с правилами и согласен на обработку персональных данных" />

            </LinearLayout>

            <Button
                android:id="@+id/RegBT"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/montserrat_alternates_medium"
                android:gravity="center"
                android:text="Зарегистрироваться"
                android:textColor="@color/TBgray"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>